
<h1> New Person </h1>
<%= form_for(:person) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </div>
  <div class="field">
    <%= f.label :alive %><br>
    <%= f.text_field :alive %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>