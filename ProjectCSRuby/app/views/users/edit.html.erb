<h1> Editing A User </h1>
<%= form_for(:user) do |f| %>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, :value => @user.username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password, :value => @user.password %>
  </div>
  <div class="field">
    <%= f.label :pin.to_s %><br>
    <%= f.text_field :pin.to_s, :value => @user.pin.to_s %>
  </div>
  <div class="field">
    <%= f.label :question1 %><br>
    <%= f.text_field :question1, :value => @user.question1 %>
  </div>
  <div class="field">
    <%= f.label :question2 %><br>
    <%= f.text_field :question2, :value => @user.question2 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :value => @user.email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>